<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_navigation"
    app:startDestination="@+id/navigation_current_forms">

    <fragment
        android:id="@+id/navigation_current_forms"
        android:name="com.lfsolutions.retail.ui.forms.currentforms.CurrentFormsFragment"
        android:label="@string/title_current_forms"
        tools:layout="@layout/fragment_current_forms">
        <action
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            android:id="@+id/action_navigation_current_forms_to_navigation_product_list"
            app:destination="@id/navigation_product_list" />
        <action
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            android:id="@+id/action_navigation_current_forms_to_navigation_agreement_memo"
            app:destination="@id/navigation_agreement_memo" />
        <action
            android:id="@+id/action_navigation_current_forms_to_serviceFormFragment"
            app:destination="@id/serviceFormFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.lfsolutions.retail.ui.forms.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_product_list"
        android:name="com.lfsolutions.retail.ui.taxinvoice.ProductListFragment"
        android:label="Product"
        tools:layout="@layout/fragment_product_list">
        <action
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            android:id="@+id/action_navigation_product_list_to_navigation_add_cart"
            app:destination="@id/navigation_add_cart" />
        <action
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            android:id="@+id/action_navigation_product_list_to_navigation_tax_invoice"
            app:destination="@id/navigation_tax_invoice" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_cart"
        android:name="com.lfsolutions.retail.ui.taxinvoice.AddToCartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_add_to_cart" />

    <fragment
        android:id="@+id/navigation_tax_invoice"
        android:name="com.lfsolutions.retail.ui.taxinvoice.TaxInvoiceFragment"
        android:label="Tax Invoice"
        tools:layout="@layout/fragment_tax_invoice" />

    <fragment
        android:id="@+id/navigation_agreement_memo"
        android:name="com.lfsolutions.retail.ui.agreementmemo.NewAgreementMemoFragment"
        android:label="Agreement Memo"
        tools:layout="@layout/fragment_new_agreement_memo">
        <action
            android:id="@+id/action_navigation_agreement_memo_to_navigation_agreement_memo_bottom_navigation"
            app:destination="@id/navigation_agreement_memo_bottom_navigation"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_agreement_memo_bottom_navigation"
        android:name="com.lfsolutions.retail.ui.agreementmemo.AgreementMemoBottomNavigationFragment"
        android:label="Agreement Memo"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"
        tools:layout="@layout/fragment_agreement_memo_bottom_navigation">
        <argument
            android:name="IsEquipment"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_navigation_agreement_memo_bottom_navigation_to_navigation_add_equipment"
            app:destination="@id/navigation_add_equipment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_equipment"
        android:name="com.lfsolutions.retail.ui.agreementmemo.EquipmentListFragment"
        android:label="Agreement Memo"
        tools:layout="@layout/fragment_equipment_list">
        <action
            android:id="@+id/action_navigation_equipment_to_navigation_add_equipment"
            app:destination="@id/navigation_add_equipment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_order"
        android:name="com.lfsolutions.retail.ui.agreementmemo.OrderSummaryFragment"
        android:label="Agreement Memo"
        tools:layout="@layout/fragment_order_summary">
        <action
            android:id="@+id/action_navigation_order_to_navigation_add_equipment"
            app:destination="@id/navigation_add_equipment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_equipment"
        android:name="com.lfsolutions.retail.ui.agreementmemo.AddEquipmentFragment"
        android:label="Add Equipment"
        tools:layout="@layout/fragment_add_equipment" />
    <fragment
        android:id="@+id/serviceFormFragment"
        android:name="com.lfsolutions.retail.ui.serviceform.ServiceFormFragment"
        android:label="fragment_service_form"
        tools:layout="@layout/fragment_service_form" />


</navigation>