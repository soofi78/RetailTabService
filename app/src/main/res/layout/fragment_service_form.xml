<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.serviceform.ServiceFormFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/scrollContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_service_form"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="icoBack,txtBack"
                app:flow_horizontalGap="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account_circle_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Supervisor"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtVehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prefix_vehicle_no"
                android:textSize="14sp" />

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                app:constraint_referenced_ids="txtName,txtRole,txtVehicleNo"
                app:flow_horizontalAlign="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/icoAccount"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCustomerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/sandal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person_black"
                        app:layout_constraintBottom_toBottomOf="@id/flowCustomerInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/flowCustomerInfo" />

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/flowCustomerInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:constraint_referenced_ids="flowName,txtAddress,flowGroup"
                        app:flow_horizontalAlign="start"
                        app:flow_verticalGap="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/icoCustomer"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/flowName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:constraint_referenced_ids="txtCustomerName,txtAccountNo"
                        app:layout_constraintHorizontal_chainStyle="spread_inside" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BKE Coffeeshop 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAccountNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A/C No. AZ0001"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/flowGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:constraint_referenced_ids="txtGroup,txtArea"
                        app:flow_horizontalGap="30dp"
                        app:layout_constraintHorizontal_chainStyle="spread_inside" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group: ABC"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area: W"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12 Tai Seng St, LEVEL 5 LUXASIA Building, Singapore 53411"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/serviceTimeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardCustomerInfo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="@+id/btnCheckIn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/btnCheckIn" />

                    <TextView
                        android:id="@+id/checkinTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="21 Mar 2024, 3:30pm"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/btnCheckIn"
                        app:layout_constraintStart_toEndOf="@+id/ivDate"
                        app:layout_constraintTop_toTopOf="@+id/ivDate" />

                    <TextView
                        android:id="@+id/checkoutTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="21 Mar 2024, 3:30pm"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ivDate"
                        app:layout_constraintEnd_toStartOf="@+id/btnCheckIn"
                        app:layout_constraintStart_toEndOf="@+id/ivDate"
                        app:layout_constraintTop_toBottomOf="@+id/checkinTime" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/gray"
                        android:drawableTop="@drawable/ic_globe"
                        android:drawablePadding="5dp"
                        android:text="Check Out"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:cornerRadius="10dp"
                        app:elevation="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblDateTime" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/yellow"
                        android:drawableTop="@drawable/ic_globe"
                        android:drawablePadding="5dp"
                        android:text="Check In"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:cornerRadius="10dp"
                        app:elevation="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnCheckOut"
                        app:layout_constraintTop_toBottomOf="@+id/lblDateTime" />


                    <ImageView
                        android:id="@+id/ivDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivDate" />

                    <TextView
                        android:id="@+id/lblInterval"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Interval of Visit"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ivDate1"
                        app:layout_constraintStart_toEndOf="@+id/ivDate1"
                        app:layout_constraintTop_toTopOf="@+id/ivDate1" />

                    <TextView
                        android:id="@+id/txtDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90 days"
                        app:layout_constraintBottom_toBottomOf="@+id/ivDate1"
                        app:layout_constraintEnd_toStartOf="@+id/icoArrow"
                        app:layout_constraintTop_toTopOf="@+id/ivDate1" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_gray"
                        app:layout_constraintBottom_toTopOf="@id/view1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivDate1" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@+id/ivDate1" />

                    <TextView
                        android:id="@+id/lbCmplDateandTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Complaint Date and Time"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view1" />

                    <TextView
                        android:id="@+id/cmplntTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:text="21 Mar 2024, 3:30pm"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_compliant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbCmplDateandTime" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@+id/cmplntTime" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/complainantCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceTimeCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblCmplnant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complainant"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoComplainant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblCmplnant" />

                    <TextView
                        android:id="@+id/txtCmplntName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ben"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icoComplainant"
                        app:layout_constraintTop_toBottomOf="@+id/lblCmplnant" />

                    <TextView
                        android:id="@+id/txtCmplntDes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Outlet Supervisor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icoComplainant"
                        app:layout_constraintTop_toBottomOf="@+id/txtCmplntName" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoCplntArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recepientCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/complainantCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblRecepient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recipient"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoRecepient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblRecepient" />

                    <TextView
                        android:id="@+id/txtRcpntName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ben"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icoRecepient"
                        app:layout_constraintTop_toBottomOf="@+id/lblRecepient" />

                    <TextView
                        android:id="@+id/txtRcpntDes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Outlet Supervisor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icoRecepient"
                        app:layout_constraintTop_toBottomOf="@+id/txtRcpntName" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icoRcpntArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/boilerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recepientCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivIdentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_identity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:padding="10dp"
                        android:id="@+id/lblboilderIdty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Boiler Identity"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/ivIdentity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBoilerList"
                        android:layout_width="0dp"
                        app:layout_constraintStart_toEndOf="@+id/ivIdentity"
                        android:layout_height="wrap_content"
                        tools:itemCount="3"
                        app:layout_constraintTop_toBottomOf="@+id/lblboilderIdty"
                        tools:listitem="@layout/boilerlist_item" />

                    <TextView
                        android:padding="10dp"
                        android:id="@+id/txtSelectMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to select More"
                        app:layout_constraintStart_toEndOf="@+id/ivIdentity"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvBoilerList" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_yellow_background"
                        android:src="@drawable/add_black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtSelectMore"
                        app:layout_constraintStart_toEndOf="@+id/txtSelectMore"
                        app:layout_constraintTop_toBottomOf="@+id/rvBoilerList" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_margin="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boilerCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <com.github.gcacace.signaturepad.views.SignaturePad
                        android:id="@+id/signaturePad"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:background="@color/sandal"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSignOn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corner_yellow_background"
                        android:text="@string/label_sign_on"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signaturePad" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnClearSign"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corner_white_background"
                        android:text="@string/label_clear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signaturePad" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/cardSignature">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_white_background"
                    android:text="@string/label_cancel" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_yellow_background"
                    android:text="Follow Up" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_yellow_background"
                    android:text="Print and Send"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPrint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
